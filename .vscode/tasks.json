{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Test promptfoo config",
			"type": "shell",
			"command": "promptfoo --version",
			"group": "build"
		},
		{
			"label": "Run promptfoo evaluation",
			"type": "shell",
			"command": "promptfoo eval",
			"group": "test"
		},
		{
			"label": "Run single test",
			"type": "shell",
			"command": "promptfoo eval --filter-first-n 1",
			"group": "test"
		},
		{
			"label": "View promptfoo results",
			"type": "shell",
			"command": "promptfoo view",
			"group": "build"
		}
	]
}